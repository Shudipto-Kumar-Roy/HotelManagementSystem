<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background_color"
    android:weightSum="10"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".DeleteGuest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:background="#343343"
        android:orientation="vertical">

        <TextView
            android:id="@+id/DeleteTitleID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Guest Info."
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FF9100"
            android:textSize="30sp"
            android:textStyle="bold"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/RoomNoTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room No:"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/UserRoomId"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textColor="#ffffff"
                    android:textAlignment="center" />
                <Button
                    android:id="@+id/searchButtonId"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="Search"
                    android:textColor="#ffffff"
                    android:background="@drawable/search_button"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="10dp"
                >

                <Button
                    android:id="@+id/deleteButtonId"
                    android:textAlignment="center"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="Delete Guest Info"
                    android:textColor="#ffff"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_button_background"/>
            </LinearLayout>

            <TextView
                android:id="@+id/deleteTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="#ffffff"
                android:text=""
                android:textSize="18sp"
                android:textAlignment="center"
                />

        </LinearLayout>

    </LinearLayout>
